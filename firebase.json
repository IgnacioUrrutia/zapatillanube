{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "**/*.sh",
      "private/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/login-register.html"
      },
      {
        "source": "/productos",
        "destination": "/productos.html"
      },
      {
        "source": "/perfil",
        "destination": "/perfil.html"
      },
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/admin-panel",
        "destination": "/admin-panel.html"
      },
      {
        "source": "/admin-simple",
        "destination": "/admin-simple.html"
      },
      {
        "source": "/pago-options",
        "destination": "/pago-options.html"
      },
      {
        "source": "/pantallacompra",
        "destination": "/pantallacompra.html"
      },
      {
        "source": "/transbank-process",
        "destination": "/transbank-process.html"
      },
      {
        "source": "/transbank-return",
        "destination": "/transbank-return.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
